<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee"
    tools:context=".activity_tstinstrucciones">

    <Button
        android:id="@+id/btsalir"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="109dp"
        android:backgroundTint="@color/kio"
        android:text="@string/salir"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtpanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtcomousar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/kio"
        app:strokeColor="@color/kio" />

    <TextView
        android:id="@+id/txtcomousar"
        android:layout_width="133dp"
        android:layout_height="39dp"
        android:layout_marginTop="84dp"
        android:text="@string/tst_instit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/kio"
        app:layout_constraintBottom_toTopOf="@+id/txtpanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156" />

    <ImageView
        android:id="@+id/imglogonom"
        android:layout_width="316dp"
        android:layout_height="164dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/txtcomousar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"
        app:srcCompat="@drawable/logo1_reservaya"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/t" />

    <ScrollView
        android:id="@+id/txtpanel"
        android:layout_width="329dp"
        android:layout_height="469dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtinstruciones"
                android:layout_width="match_parent"
                android:layout_height="405dp"
                android:text="@string/tst_instdes"
                android:textColor="#4E342E" />

            <TextView
                android:id="@+id/txtfoot"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/tst_instfoot"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#795548" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="155dp"
        android:layout_height="101dp"
        android:layout_marginEnd="244dp"
        app:layout_constraintBottom_toBottomOf="@+id/imglogonom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo2_reservaya"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/t" />

</androidx.constraintlayout.widget.ConstraintLayout>